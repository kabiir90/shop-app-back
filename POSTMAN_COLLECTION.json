              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password_hash\": \"password123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"role\": \"CUSTOMER\"\n}"
